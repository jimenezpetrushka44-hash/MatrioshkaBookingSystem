@model MatrioshkaBookingSystem.Models.Floor

@{
    ViewData["Title"] = "Delete Floor";
}

<h2>Delete Floor</h2>
<hr />

<div>
    <h4>Are you sure you want to delete this floor?</h4>

    <p><strong>Floor Number:</strong> @Model.FloorNumber</p>
    <p><strong>Status:</strong> @Model.FloorStatus</p>

    @if (Model.Rooms != null && Model.Rooms.Any())
    {
        <p style="color:red; font-weight:bold;">
            This floor cannot be deleted because it still contains rooms.
        </p>

        <a asp-controller="Admin" asp-action="Admins" class="btn btn-secondary">Back</a>
    }
    else
    {
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="FloorId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Admin" asp-action="Admins" class="btn btn-secondary">Cancel</a>
        </form>
    }
</div>
