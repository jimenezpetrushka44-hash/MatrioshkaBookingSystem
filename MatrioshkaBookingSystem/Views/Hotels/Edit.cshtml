@model MatrioshkaBookingSystem.Models.Hotel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Hotel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HotelId" />

            <input type="hidden" asp-for="ImagePath" />

            <div class="form-group">
                <label asp-for="HotelName" class="control-label"></label>
                <input asp-for="HotelName" class="form-control" />
                <span asp-validation-for="HotelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HotelLocation" class="control-label"></label>
                <input asp-for="HotelLocation" class="form-control" />
                <span asp-validation-for="HotelLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HotelStatus" class="control-label"></label>

                <select asp-for="HotelStatus" class="form-control">
                    <option value="Open">Open</option>
                    <option value="Closed">Closed</option>
                    <option value="Under Maintenance">Under Maintenance</option>
                </select>

                <span asp-validation-for="HotelStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ImageFile" class="control-label">Imagen del Hotel (Cambiar)</label>
                <input type="file" id="ImageFile" name="ImageFile" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <p class="mt-2">Imagen actual:</p>
                    <img src="@Url.Content(Model.ImagePath)" alt="Imagen actual" style="max-width: 150px; height: auto; border-radius: 5px;" />
                }
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}