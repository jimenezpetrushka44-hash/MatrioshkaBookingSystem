@model MatrioshkaBookingSystem.Models.Room

@{
    ViewData["Title"] = "Edit Room";
}

<h1>Edit Room</h1>
<hr />

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RoomId" />

    <div class="form-group">
        <label>Floor</label>
        <select asp-for="FloorId" class="form-control" asp-items="ViewBag.Floors"></select>
    </div>

    <div class="form-group">
        <label>Room Type</label>
        <select asp-for="TypeId" class="form-control" asp-items="ViewBag.RoomTypes"></select>
    </div>

    <div class="form-group">
        <label>Status</label>
        <select asp-for="RoomStatus" class="form-control">
            <option value="Available">Available</option>
            <option value="Occupied">Occupied</option>
            <option value="Maintenance">Maintenance</option>
        </select>
    </div>

    <div class="form-group">
        <label>Assets</label>
        <div>
            @foreach (var asset in ViewBag.Assets)
            {
                var check = Model.Assets.Any(a => a.AssetId == asset.AssetId);

                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           name="SelectedAssetIds"
                           value="@asset.AssetId"
                           @(check ? "checked" : "") />

                    <label class="form-check-label">@asset.AssetName</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<br />
<a asp-action="Admins">Back to List</a>
