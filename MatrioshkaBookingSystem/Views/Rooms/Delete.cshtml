@model MatrioshkaBookingSystem.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<h2>Delete Room</h2>
<hr />

<h4>Are you sure you want to delete this room?</h4>

<dl class="row mt-3">
    <dt class="col-sm-3">Status:</dt>
    <dd class="col-sm-9">@Model.RoomStatus</dd>

    <dt class="col-sm-3">Floor:</dt>
    <dd class="col-sm-9">Floor @Model.Floor.FloorNumber</dd>

    <dt class="col-sm-3">Room Type:</dt>
    <dd class="col-sm-9">@Model.Type.TypeName</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="RoomId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Admins" asp-controller="Admin" class="btn btn-secondary ms-2">Cancel</a>
</form>
