@model MatrioshkaBookingSystem.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
    ViewData["BodyClass"] = "admin-page booking-create-page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/booking.css" />
}

<div class="booking-wrapper">

    <div class="side-illustration">
        <h1 class="big-title">Create a</h1>
        <h1 class="accent-title">Booking</h1>
        <p class="form-note">Please fill what is asked.</p>
    </div>

    <div class="form-section">
        <div class="form-card">

            <h2 class="form-title">Booking Details</h2>

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <hr style="border-top: 1px solid #b7d7ee; margin: 30px 0 20px 0;" />

                <div class="form-group">
                    <label class="control-label">Hotel Selected:</label>
                    <div class="selected-hotel-display">
                        <strong style="font-size: 1.1em;">@ViewBag.SelectedHotelName</strong>
                    </div>
                </div>

                <input type="hidden" id="HotelIdHidden" value="@ViewBag.SelectedHotelId" />

                <div class="form-group">
                    <label asp-for="RoomId" class="control-label">Rooms (Available):</label>
                    <select asp-for="RoomId"
                            class="form-control select-styled"
                            asp-items="@(ViewData["RoomId"] as SelectList)">
                        <option value="">Select a room</option>
                    </select>
                    <span asp-validation-for="RoomId" class="text-danger"></span>
                </div>

                <hr style="border-top: 1px solid #b7d7ee; margin: 30px 0 20px 0;" />

                <h2 class="form-title">Billing Information</h2>

                <div class="form-group">
                    <label asp-for="Billing.FullName">Full Name on Card:</label>
                    <input asp-for="Billing.FullName" class="form-control" required />
                </div>

                <div class="form-group">
                    <label asp-for="Billing.Email">Email:</label>
                    <input asp-for="Billing.Email" class="form-control" type="email" required />
                </div>

                <div class="form-group">
                    <label asp-for="Billing.BillingAddress">Billing Address:</label>
                    <input asp-for="Billing.BillingAddress" class="form-control" required />
                </div>

                <div class="form-group">
                    <label asp-for="Billing.CardNumber">Card Number:</label>
                    <input asp-for="Billing.CardNumber" class="form-control" required />
                </div>

                <div class="form-group">
                    <label asp-for="Billing.ExpirationDate">Expiration (MM/YY):</label>
                    <input asp-for="Billing.ExpirationDate" class="form-control" placeholder="MM/YY" required />
                </div>

                <div class="form-group">
                    <label asp-for="DateofBooking">Start date:</label>
                    <input asp-for="DateofBooking" type="date" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="EndofBooking">End date:</label>
                    <input asp-for="EndofBooking" type="date" class="form-control" />
                </div>

                @if (ViewBag.ExtraAssets != null && ViewBag.ExtraAssets.Count > 0)
                {
                    <hr style="border-top: 1px solid #b7d7ee; margin: 30px 0 20px 0;" />
                    <h2 class="form-title">Extra Assets</h2>

                    <div class="extra-asset-checkbox-group">
                        @foreach (var asset in ViewBag.ExtraAssets)
                        {
                            <div class="asset-item">
                                <input type="checkbox"
                                       name="SelectedExtraAssets"
                                       value="@asset.ExtraAssetId"
                                       id="extra_asset_@asset.ExtraAssetId" />
                                <label for="extra_asset_@asset.ExtraAssetId">
                                    @asset.ExtraAssetName (<span>@asset.AssetPrice.ToString("C")</span>)
                                </label>
                            </div>
                        }
                    </div>
                }

                <div class="form-group submit-group">
                    <button type="submit" class="btn btn-primary create-btn">Create Booking</button>
                    <a asp-action="Index" class="btn btn-secondary back-btn">Go back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
