@model MatrioshkaBookingSystem.Models.AdminViewModel

@{
    Layout = "_Layout";
    ViewData["BodyClass"] = "admin-page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}

<div class="admin-container">

    <h1 class="title">Admin Dashboard</h1>

    <div class="section">
        <h2>Users</h2>

        <table class="table">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>User</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>

            @foreach (var u in Model.Users)
            {
                <tr>
                    <td>@u.UserId</td>
                    <td>@u.FirstName @u.LastName</td>
                    <td>@u.Username</td>
                    <td>@u.Email</td>
                    <td>@u.Phone</td>
                </tr>
            }
        </table>
    </div>

    <div class="section">
        <h2>Hotels</h2>

        <p>
            <a href="/Hotels/Create" class="add-btn">+ Add Hotel</a>
        </p>

        <table class="table">
            <tr>
                <th>Hotel ID</th>
                <th>Name</th>
                <th>Location</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>

            @foreach (var h in Model.Hotels)
            {
                <tr>
                    <td>@h.HotelId</td>
                    <td>@h.HotelName</td>
                    <td>@h.HotelLocation</td>
                    <td>@h.HotelStatus</td>
                    <td>
                        <a href="/Hotels/Edit/@h.HotelId" class="action-btn">Edit</a>
                        <a href="/Hotels/Delete/@h.HotelId" class="danger-btn">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="section">
        <h2>Room Asset Options</h2>

        <p>
            <a href="/RoomAssets/Create" class="add-btn">+ Add New Room Asset Option</a>
        </p>

        <table class="table">
            <tr>
                <th>Asset ID</th>
                <th>Name</th>
                <th>Status</th>
            </tr>

            @foreach (var a in Model.RoomAssets)
            {
                <tr>
                    <td>@a.AssetId</td>
                    <td>@a.AssetName</td>
                    <td>@a.AssetStatus</td>
                </tr>
            }
        </table>
    </div>
    <div class="section">
        <h2>Extra Assets (Cobrables a Cliente)</h2>

        <p>
            <a href="/ExtraAssets/Create" class="add-btn">+ Add Extra Asset Option</a>
        </p>

        <table class="table">
            <tr>
                <th>Asset ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Status</th>
            </tr>

            @foreach (var a in Model.ExtraAssets)
            {
                <tr>
                    <td>@a.ExtraAssetId</td>
                    <td>@a.ExtraAssetName</td>
                    <td>@a.AssetPrice.ToString("C")</td>
                    <td>@a.ExtraAssetStatus</td>
                </tr>
            }
        </table>
    </div>
    <div class="section">
        <h2>Floors</h2>

        <p>
            <a href="/Floors/Create" class="add-btn">+ Add Floor</a>
        </p>

        <table class="table">
            <tr>
                <th>Floor ID</th>
                <th>Hotel</th>
                <th>Status</th>
            </tr>

            @foreach (var f in Model.Floors)
            {
                <tr>
                    <td>@f.FloorId</td>
                    <td>@f.Hotel.HotelName</td>
                    <td>@f.FloorStatus</td>
                </tr>
            }
        </table>
    </div>
    <div class="section">
        <h2>Rooms</h2>

        <p>
            <a href="/Rooms/Create" class="add-btn">+ Add Room</a>
        </p>

        <table class="table">
            <tr>
                <th>Room ID</th>
                <th>Hotel</th>
                <th>Floor</th>
                <th>Type</th>
                <th>Status</th>
            </tr>

            @foreach (var r in Model.Rooms)
            {
                <tr>
                    <td>@r.RoomId</td>
                    <td>@r.Floor.Hotel.HotelName</td>
                    <td>@r.Floor.FloorId</td>
                    <td>@r.Type.TypeName</td>
                    <td>@r.RoomStatus</td>
                </tr>
            }
        </table>
    </div>

    <div class="section">
        <h2>Bookings</h2>

        <p>
            <a href="/Bookings/Create" class="add-btn">+ Add Booking</a>
        </p>

        <table class="table">
            <tr>
                <th>ID</th>
                <th>User</th>
                <th>Room Type</th>
                <th>Hotel</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>

            @foreach (var b in Model.Bookings)
            {
                <tr>
                    <td>@b.BookingId</td>
                    <td>@(b.User?.FirstName) @(b.User?.LastName)</td>
                    <td>@(b.Room?.Type?.TypeName) (Room #@b.RoomId)</td>
                    <td>@(b.Room?.Floor?.Hotel?.HotelName)</td>
                    <td>@b.DateofBooking.ToString("yyyy-MM-dd")</td>
                    <td>@b.EndofBooking.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="/Bookings/Edit/@b.BookingId" class="edit-btn">Edit</a> |
                        <a href="/Bookings/Delete/@b.BookingId" class="danger-btn">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>

</div>