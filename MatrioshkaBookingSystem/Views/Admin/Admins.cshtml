@model MatrioshkaBookingSystem.Models.AdminViewModel

@{
    Layout = "_Layout";
    ViewData["BodyClass"] = "admin-page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}

<div class="admin-container">

    <h1 class="title">Admin Dashboard</h1>

    <div class="section">
        <h2>Users</h2>

        <table class="table">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>User</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>

            @foreach (var u in Model.Users)
            {
                <tr>
                    <td>@u.UserId</td>
                    <td>@u.FirstName @u.LastName</td>
                    <td>@u.Username</td>
                    <td>@u.Email</td>
                    <td>@u.Phone</td>
                </tr>
            }
        </table>
    </div>

    <div class="section">
        <h2>Hotels</h2>

        <p>
            <a href="/Hotels/Create" class="add-btn">+ Add Hotel</a>
        </p>

        <table class="table">
            <tr>
                <th>Hotel ID</th>
                <th>Name</th>
                <th>Location</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>

            @foreach (var h in Model.Hotels)
            {
                <tr>
                    <td>@h.HotelId</td>
                    <td>@h.HotelName</td>
                    <td>@h.HotelLocation</td>
                    <td>@h.HotelStatus</td>
                    <td>
                        <a href="/Hotels/Edit/@h.HotelId" class="action-btn">Edit</a>
                        <a href="/Hotels/Delete/@h.HotelId" class="danger-btn">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="section">
        <h2>Floors</h2>

        <p>
            <a href="/Floors/Create" class="add-btn">+ Add Floor</a>
        </p>

        <table class="table">
            <tr>
                <th>Floor ID</th>
                <th>Hotel</th>
                <th>Status</th>
            </tr>

            @foreach (var f in Model.Floors)
            {
                <tr>
                    <td>@f.FloorId</td>
                    <td>@f.Hotel.HotelName</td>
                    <td>@f.FloorStatus</td>
                </tr>
            }
        </table>
    </div>
    <div class="section">
        <h2>Rooms</h2>

        <p>
            <a href="/Rooms/Create" class="add-btn">+ Add Room</a>
        </p>

        <table class="table">
            <tr>
                <th>Room ID</th>
                <th>Hotel</th>
                <th>Floor</th>
                <th>Type</th>
                <th>Status</th>
            </tr>

            @foreach (var r in Model.Rooms)
            {
                <tr>
                    <td>@r.RoomId</td>
                    <td>@r.Floor.Hotel.HotelName</td>
                    <td>@r.Floor.FloorId</td>
                    <td>@r.Type.TypeName</td>
                    <td>@r.RoomStatus</td>
                </tr>
            }
        </table>
    </div>

</div>
